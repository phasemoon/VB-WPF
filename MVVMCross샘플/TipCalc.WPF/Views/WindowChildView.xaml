<views:MvxWindow xmlns:vm="clr-namespace:TipCalc.Core;assembly=TipCalc.Core"
                    xmlns:views="clr-namespace:MvvmCross.Platforms.Wpf.Views;assembly=MvvmCross.Platforms.Wpf"
    x:TypeArguments="vm:WindowChildViewModel"
    
    x:Class="WindowChildView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TipCalc.WPF"
        mc:Ignorable="d"
        Title="WindowChildView" Height="300" Width="300">
    <StackPanel Background="LightGray">
        <TextBlock Text="{Binding Text}" Margin="5"/>
    </StackPanel>
</views:MvxWindow>
